<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <Button
            android:id="@+id/btn_activity_record_record"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="录音"
            />

        <Button
            android:id="@+id/btn_activity_record_pause"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="暂停"
            />

        <Button
            android:id="@+id/btn_activity_record_resume"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="恢复"
            />

        <Button
            android:id="@+id/btn_activity_record_save"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="停止/保存"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_activity_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="00:00"
        />

    <Button
        android:id="@+id/btn_activity_record_delete_all"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="删除全部"
        />

    <ListView
        android:id="@+id/list_activity_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    

</LinearLayout>